<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paginaprincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="98dp"
            android:layout_height="73dp"
            android:layout_marginStart="165dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="65dp"
            app:srcCompat="@drawable/logofondetransparente" />

        <Button
            android:id="@+id/bt_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="conexion"
            android:textSize="24sp"
            app:backgroundTint="#0076ff" />

        <Button
            android:id="@+id/bt_hist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="historial"
            android:textSize="24sp"
            app:backgroundTint="#0076ff" />

        <Button
            android:id="@+id/bt_jue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="juegos"
            android:textSize="24sp"
            app:backgroundTint="#0076ff" />

        <Button
            android:id="@+id/bt_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="app"
            android:textSize="24sp"
            app:backgroundTint="#0076ff" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
